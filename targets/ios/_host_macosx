SYS_IOSSDK=`basename $IOSSDK`
SYS_IOSVERSION=$IOSVERSION

ios_cross=$IOSROOT/usr/bin
SYS_CC=`ls -1 $ios_cross/arm-apple-darwin*-gcc-* 2> /dev/null | sort -r | sed '/llvm/d' | head -n 1`
if [ "X$SYS_CC" = "X" ]; then
  SYS_CC=`ls -1 $ios_cross/arm-apple-darwin*-gcc-* 2> /dev/null | sort -r | head -n 1`
fi
if [ "X$SYS_CC" = "X" ]; then
  SYS_CC=`ls -1 $ios_cross/arm-apple-darwin*-llvm-* 2> /dev/null | sort -r | head -n 1`
fi
if [ "X$SYS_CC" = "X" ]; then
  SYS_CC=`xcrun -find -sdk iphoneos clang`" -arch $SYS_CPU"
fi
assertfile $SYS_CC
SYS_CC="$SYS_CC $SYS_DEBUGFLAG -isysroot $IOSSDK -DIOS -DIPHONE -miphoneos-version-min=$SYS_IOSVERSION"
SYS_CC="$SYS_CC -fPIC -fsigned-char -fomit-frame-pointer"
SYS_AR="$ios_cross/ar"
if [ ! -f $SYS_AR ]; then
  SYS_AR=`xcrun -find -sdk iphoneos ar`
fi
SYS_RANLIB="$ios_cross/ranlib"
if [ ! -f $SYS_RANLIB ]; then
  SYS_RANLIB=`xcrun -find -sdk iphoneos ranlib`
fi
SYS_STRIP="$ios_cross/strip"
if [ ! -f $SYS_STRIP ]; then
  SYS_STRIP=`xcrun -find -sdk iphoneos strip`
fi
assertfile $SYS_AR
assertfile $SYS_RANLIB
assertfile $SYS_STRIP
SYS_NM="$ios_cross/nm"
SYS_AS=$ios_cross"/as"
SYS_LD=$ios_cross"/ld"
SYS_WINDRES=
SYS_EXEFIX=
SYS_APPFIX=".app"

#eof
