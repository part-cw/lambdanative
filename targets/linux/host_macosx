linux_sysroot=`ls -1d ${LINUXSDK}/*86*-linux | head -n 1`
linux_cross=`ls -1 ${LINUXSDK}/bin/*-gcc | head -n 1 | sed 's/gcc$//'`

if [ "X$SYS_DEBUGFLAG" = "X" ]; then
  SYS_DEBUGFLAG="-O3"
fi
SYS_CC=$linux_cross"gcc $SYS_DEBUGFLAG -isysroot $linux_sysroot -DLINUX $cflag_additions"
SYS_AR=$linux_cross"ar"
SYS_NM=$linux_cross"nm"
SYS_RANLIB=$linux_cross"ranlib"
SYS_STRIP=$linux_cross"strip"
SYS_CPP=$linux_cross"cpp"
SYS_AS=$linux_cross"as"
SYS_LD=$linux_cross"ld"
SYS_OBJCOPY=$linux_cross"objcopy"
SYS_OBJDUMP=$linux_cross"objdump"
SYS_READELF=$linux_cross"readelf"
SYS_GPROF=$linux_cross"gprof"
SYS_WINDRES=
SYS_EXEFIX=
SYS_APPFIX=

#eof
